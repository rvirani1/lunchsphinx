.row
  .col-md-4
  .col-md-4
    .thumbnail
      %iframe{ :width =>  "100%", :height => "250", :frameborder => "0",   :src =>"https://www.google.com/maps/embed/v1/search?key=AIzaSyC7TuNaQTvLdE3A7wsdKAl4EMsZtrl0vhQ&q=#{formatted_address}"}
      .caption
        %h3= result["name"].split.map(&:capitalize).join(' ')
        -#%p= result["types"].map(&:capitalize).join(" ")
        %p
          - if website
            %a.btn.btn-success{ :href => "#{website}", :role => "button", :target => "_blank" }Website
          %a.btn.btn-link#floatright{ :href => "http://#{request.host}:#{request.port}/?latitude=#{latitude}&longitude=#{longitude}&distance=#{distance}", :role => "button" }Not Feelin' It
  .col-md-4

